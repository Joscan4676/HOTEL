<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTEL"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="-16dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="47dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">


            <TextView
                android:layout_width="111dp"
                android:layout_height="197dp"
                android:text="@string/about_hotel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="27dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="113sp"
                android:layout_height="26sp"
                android:background="@drawable/bordeer"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="186dp">


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_star"
                    android:backgroundTint="#E3AE10"
                    android:foregroundGravity="center"
                    android:paddingEnd="30sp" />

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingEnd="5dp"
                    android:text="@string/_5_perfect"
                    android:textColor="#E3AE10"


                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="149dp"
                android:layout_height="26dp"
                android:text="@string/from_134_678"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.861"
                tools:layout_editor_absoluteX="27dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="102dp"
                android:layout_height="15dp"
                android:text="@string/for_a_tour_with_flight"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="232dp"
                android:layout_height="16dp"
                android:text="@string/madinat_makadi_safaga_road_makadi_bay"
                android:textColor="#2196F3"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.757"
                tools:layout_editor_absoluteX="27dp" />

            <TextView
                android:layout_width="189sp"
                android:layout_height="26sp"
                android:text="@string/steigenberger_makadi"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.705"
                tools:layout_editor_absoluteX="27dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="330dp"
                android:layout_height="167dp"
                android:background="@drawable/hotelpic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>